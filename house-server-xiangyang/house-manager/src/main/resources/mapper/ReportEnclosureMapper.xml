<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ryzw.housemanager.mapper.ReportEnclosureMapper">

    <!--查询所有单位上报文件按年份-->
    <select id="allReportEnclosure" resultType="com.ryzw.housemanager.vo.AdressAndNameVo">
        SELECT
        report_enclosure_name as fileName,
        report_enclosure_physics_url as address
        FROM
        report_enclosure
        <where>
            <if test="reportUnitYearVo.reportYear != null">
                and report_year = #{reportUnitYearVo.reportYear}
            </if>
        </where>

    </select>

</mapper>
